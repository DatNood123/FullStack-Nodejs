<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display CRUD</title>
</head>

<style>
    table,
    th,
    td {
        border: 1px solid green;
        border-collapse: collapse;
        text-align: center;
    }

    .btn-edit {
        background-color: orange;
        outline: none;
        border: none;
        margin: 5px;
        height: 25px;
        width: 60px;
        cursor: pointer;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        padding-top: 6px;
    }

    .btn-delete {
        background-color: red;
        outline: none;
        border: none;
        margin: 5px;
        height: 25px;
        width: 60px;
        color: white;
        cursor: pointer;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        padding-top: 6px;
    }
</style>

<body>
    <table style="width: 100%">
        <tr>
            <th>Email</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
            <th>Action</th>
        </tr>

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id%>" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>